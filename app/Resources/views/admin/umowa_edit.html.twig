{% extends 'base.html.twig' %}
	{% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/prettyPhoto.css') }}" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
    {% endblock %}
{% block body %}
<div class="container" style="padding-top:78px">
    <div class="col-md-6 col-offset-3">
        <div class="panel">
            <div class="panel-heading">
                <h3><div style="float: left; color: cyan;">|</div>  Edycja
                </h3>
            </div>
            <div class="panel-body">
                {% for m in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success">{{ m }}</div>
                {% endfor %}
                {{form_start(form)}}
                <div class='form-inline row form-add'>
                    <div class='col-md-2'>{{ form_label(form.kwota) }}</div>
                    <div class='col-md-7'>{{ form_widget(form.kwota) }}</div>
                    <div class='col-md-3'>{{ form_errors(form.kwota) }}</div>
                </div>
                <div class='form-inline row form-add'>
                    <div class='col-md-2'>{{ form_label(form.pkd) }}</div>
                    <div class='col-md-7'>{{ form_widget(form.pkd) }}</div>
                    <div class='col-md-3'>{{ form_errors(form.pkd) }}</div>
                </div>
                <div class='form-inline row form-add'>
                    <div class='col-md-2'>{{ form_label(form.zadanie) }}</div>
                    <div class='col-md-7'>{{ form_widget(form.zadanie) }}</div>
                    <div class='col-md-3'>{{ form_errors(form.zadanie) }}</div>
                </div>
                <div class='form-inline row form-add'>
                    <div class='col-md-2'>{{ form_label(form.podmiot) }}</div>
                    <div class='col-md-7'>{{ form_widget(form.podmiot) }}</div>
                    <div class='col-md-4'>{{ form_errors(form.podmiot) }}</div>
                </div>
                <div class='form-inline row form-add'>
                    <div class='col-md-2'>{{ form_label(form.uwagi) }}</div>
                    <div class='col-md-7'>{{ form_widget(form.uwagi) }}</div>
                    <div class='col-md-3'>{{ form_errors(form.uwagi) }}</div>
                </div>
                <div class='form-inline row form-add'>
                    <div class='col-md-2'>{{ form_label(form.samorzad) }}</div>
                    <div class='col-md-7'>{{ form_widget(form.samorzad) }}</div>
                    <div class='col-md-3'>{{ form_errors(form.samorzad) }}</div>
                </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}
