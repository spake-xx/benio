{% block content %}
<div class="con container">
    <div class="row">
        <div class="idea col-md-8">
            <div class="panel">
                <div class="panel-heading">
                    <p class="title">Idea Bazyliszka</p>
                    <hr>
                </div>
                <div class="panel-body">
