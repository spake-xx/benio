{% trans_default_domain 'FOSUserBundle' %}

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="index.html">Bazyliszek</a>
        </div>
        <ul class="nav navbar-nav pull-left">
            <li><a href="#">Umowy</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dodaj umowę <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="#">Import .CSV</a></li>
                    <li><a href="#">Wprowadź ręcznie</a></li>
                    <li><a href="#">Pobierz wzór</a></li>
                </ul>
            </li>
            <li><a href="{{ path('umowy_export') }}">Export moich umów</a></li>
        </ul>
        <ul class="nav navbar-nav pull-right">
            <li class="active"><a href="#">{{ 'profile.show.username'|trans }}: {{ user.username }}</a></li>
            <li><a href="{{ path('fos_user_security_logout') }}">Wyloguj</a></li>
        </ul>
    </div>
</nav>
<div class="con ">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-user">
                <div class="text-center panel-heading">
                    Dane
                </div>
                <div class="panel-body">
                    <table class="table table-stripped table-condensed">
                        <tr>
                            <th>Użytkownik</th>
                            <td>{{ app.user.username }}</td>
                        </tr>
                        <tr>
                            <th>Samorząd</th>
                            <td>{{ app.user.samorzad.samorzad }}</td>
                        </tr>
                        <tr>
                            <th>Województwo</th>
                            <td>{{ app.user.samorzad.wojewodztwo }}</td>
                        </tr>
                        <tr>
                            <th>Adres</th>
                            <td>{{ app.user.samorzad.ulica }} {{ app.user.samorzad.nrdomu }} {{ app.user.samorzad.kodpocztowy }} {{ app.user.samorzad.miejscowosc }}</td>
                        </tr>
                        <tr>
                            <th colspan="2">{{ app.user.samorzad.email }}</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="panel panel-user">
                <div class="panel-heading">
                    {{ app.user.username }} -> umowy
                </div>
                <div class="panel-body">
                    <table class="table table-stripped table-hover table-condensed table-umowy">
                        <tr>
                            <th>Podmiot</th>
                            <th>Zadanie</th>
                            <th>PKD</th>
                            <th>Uwagi</th>
                            <th>Kwota</th>
                        </tr>
                            {% for i in umowy %}
                                <tr>
                                    <td>{{ i.podmiot }}</td>
                                    <td>{{ i.zadanie }}</td>
                                    <td>{{ i.pkd }}</td>
                                    <td>{{ i.uwagi }}</td>
                                    <td>{{ i.kwota }}</td>
                                </tr>
                            {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>