                </ul>
            </li>
        </ul>
        <ul class="nav navbar-nav pull-right">
            <li class="active"><a href="#">{{ 'profile.show.username'|trans }}: {{ user.username }}</a></li>
            <li><a href="#">Wyloguj</a></li>
        </ul>
    </div>
</nav>
<div class="con container">
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-user">
                <div class="panel-heading">
                    Dane
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>Użytkownik</th>
                            <td>{{ app.user.username }}</td>
                        </tr>
                        <tr>
                            <th>Samorząd</th>
                            <td>{{ app.user.samorzad.samorzad }}</td>
                        </tr>
                        <tr>
                            <th>Województwo</th>
                            <td>{{ app.user.samorzad.wojewodztwo }}</td>
                        </tr>
                        <tr>
                            <th>Miasto</th>
                            <td>{{ app.user.samorzad.miejscowosc }}</td>
                        </tr>
                        <tr>
                            <th>Adres</th>
                            <td>{{ app.user.samorzad.kodpocztowy }} {{ app.user.samorzad.ulica }} {{ app.user.samorzad.nrdomu }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-user">
                <div class="panel-heading">
                    Nazwa usera -> umowy
                    <hr>
                </div>
                <div class="panel-body">
                    treść
                </div>
            </div>
        </div>
