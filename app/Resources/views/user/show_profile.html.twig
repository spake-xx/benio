{% trans_default_domain 'FOSUserBundle' %}

{% include "user/navbar_user.html.twig" %}

<section id="services">
    <div class="container">
        <div class="box first">
            <div class="row">
            </div><!--/.row-->
        </div>
    </div>
</section>

<section id="panel">
    <div class="container">
        <div class="box">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-user">
                <div class="text-center panel-heading">
                    <div class="pull-left"><h3><div style="float: left; color: cyan;">|</div>  Dane</h3><br/></div>
                </div>
                <div class="panel-body">
                    <table class="table table-stripped table-condensed">
                        <tr>
                            <th>Użytkownik</th>
                            <td>{{ app.user.username }}</td>
                        </tr>
                        <tr>
                            <th>Samorząd</th>
                            <td>{{ app.user.samorzad.samorzad }}</td>
                        </tr>
                        <tr>
                            <th>Województwo</th>
                            <td>{{ app.user.samorzad.wojewodztwo }}</td>
                        </tr>
                        <tr>
                            <th>Adres</th>
                            <td>{{ app.user.samorzad.ulica }} {{ app.user.samorzad.nrdomu }} {{ app.user.samorzad.kodpocztowy }} {{ app.user.samorzad.miejscowosc }}</td>
                        </tr>
                        <tr>
                            <th colspan="2">{{ app.user.samorzad.email }}</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="panel panel-user">
                <div class="panel-heading">
                    <div><h3><div style="float: left; color: cyan;">|</div>  Ostatnie 10 umów samorządu {{ app.user.samorzad.samorzad }}
                        {#<a class="btn btn-primary pull-right" href="{{ path('umowy_export') }}">Export moich wszystkich umów</a>#}
                        <a class="btn btn-primary pull-right" href="{{ path('view_moje') }}">Pokaż moje wszystkie umowy</a>
                        </h3>
                    </div>

                </div>
                <div class="panel-body">
                    <table class="table table-stripped table-hover table-condensed table-umowy">
                        <tr>
                            <th>Podmiot</th>
                            <th>Zadanie</th>
                            <th>PKD</th>
                            <th>Uwagi</th>
                            <th>Kwota</th>
                        </tr>
                            {% for i in umowy %}
                                <tr>
                                    <td>{{ i.podmiot }}</td>
                                    <td>{{ i.zadanie }}</td>
                                    <td>{{ i.pkd }}</td>
                                    <td>{{ i.uwagi }}</td>
                                    <td>{{ i.kwota }}</td>
                                </tr>
                            {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
            </div>
        </div>
</div>
        </div><!--/.box-->
    </div><!--/.container-->
</section><!--/#services-->
