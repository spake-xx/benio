{% trans_default_domain 'FOSUserBundle' %}

<header id="header" role="banner">
    <div class="container">
        <div id="navbar" class="navbar navbar-default">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html"></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#main-slider"><i class="icon-home"></i></a></li>
                    <li><a href="umowy/">Umowy</a></li>
                    <li><a href="#pricing">Dla samorządów</a></li>
                    <li><a href="#contact">Kontakt</a></li>
                </ul>
            </div>
        </div>
    </div>
</header><!--/#header-->
<section id="services">
    <div class="container">
        <div class="box first">
            <div class="row">
            </div><!--/.row-->
        </div>
    </div>
</section>

<section id="panel">
    <div class="container">
        <div class="box">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-user">
                <div class="text-center panel-heading">
                    <div class="row text-left"><h3><div style="float: left; color: cyan;">|</div>  Dane</h3><br /></div>
                </div>
                <div class="panel-body">
                    <table class="table table-stripped table-condensed">
                        <tr>
                            <th>Użytkownik</th>
                            <td>{{ app.user.username }}</td>
                        </tr>
                        <tr>
                            <th>Samorząd</th>
                            <td>{{ app.user.samorzad.samorzad }}</td>
                        </tr>
                        <tr>
                            <th>Województwo</th>
                            <td>{{ app.user.samorzad.wojewodztwo }}</td>
                        </tr>
                        <tr>
                            <th>Adres</th>
                            <td>{{ app.user.samorzad.ulica }} {{ app.user.samorzad.nrdomu }} {{ app.user.samorzad.kodpocztowy }} {{ app.user.samorzad.miejscowosc }}</td>
                        </tr>
                        <tr>
                            <th colspan="2">{{ app.user.samorzad.email }}</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="panel panel-user">
                <div class="panel-heading">
                    <div class="row text-left"><h3><div style="float: left; color: cyan;">|</div>  Umowy samorządu {{ app.user.samorzad.samorzad }} </h3><br /></div>
                    <a class="btn btn-default btn-own pull-right" href="{{ path('umowy_export') }}">Export moich umów</a>
                </div>
                <div class="panel-body">
                    <table class="table table-stripped table-hover table-condensed table-umowy">
                        <tr>
                            <th>Podmiot</th>
                            <th>Zadanie</th>
                            <th>PKD</th>
                            <th>Uwagi</th>
                            <th>Kwota</th>
                        </tr>
                            {% for i in umowy %}
                                <tr>
                                    <td>{{ i.podmiot }}</td>
                                    <td>{{ i.zadanie }}</td>
                                    <td>{{ i.pkd }}</td>
                                    <td>{{ i.uwagi }}</td>
                                    <td>{{ i.kwota }}</td>
                                </tr>
                            {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
            </div>
        </div>
</div>
        </div><!--/.box-->
    </div><!--/.container-->
</section><!--/#services-->
