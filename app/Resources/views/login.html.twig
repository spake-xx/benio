<form id="login-form" method="post" role="form" action="{{ path("fos_user_security_check") }}" style="display: block;">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <input type="text" name="_username" value="{{ last_username }}" required="required" id="username" tabindex="1" class="form-control" placeholder="Username">
    </div>
    <div class="form-group">
        <input type="password" name="_password" required="required" id="password" tabindex="2" class="form-control" placeholder="Password">
    </div>
    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />Dla kumatych
        {#<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>#}
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <input type="submit" style="background-color: #fba24e;" name="_submit" value="{{ 'security.login.submit'|trans }}" id="login-submit" tabindex="4" class="form-control btn btn-login">
            </div>
        </div>
    </div>
</form>
